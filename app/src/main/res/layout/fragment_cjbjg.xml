<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.risid.fragment.CjBjgFragment">

    <include
        layout="@layout/layout_cj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ScrollView
        android:fadingEdge="none"
        android:scrollbars="none"
        android:scrollingCache="false"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_sbjg"
                android:textColor="@android:color/white"
                android:paddingLeft="20dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingRight="20dp"
                android:background="@color/colorPrimary"
                android:textSize="@dimen/abc_action_bar_content_inset_material"
                android:text="@string/sbjg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <ListView
                android:id="@+id/lv_cbjg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></ListView>

            <TextView
                android:layout_marginTop="@dimen/abc_action_bar_content_inset_material"
                android:id="@+id/tv_cbjg"
                android:textColor="@android:color/white"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:background="@color/colorPrimary"
                android:textSize="@dimen/abc_action_bar_content_inset_material"
                android:text="@string/cbjg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <ListView
                 android:id="@+id/lv_sbjg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></ListView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>

